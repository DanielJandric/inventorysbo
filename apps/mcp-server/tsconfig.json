{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "allowArbitraryExtensions": true,
    "moduleSuffixes": [".ts", ".d.ts", ".js"],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "types": []
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"],
  "ts-node": {
    "transpileOnly": true
  },
  "exclude": ["node_modules", "dist"]
}

